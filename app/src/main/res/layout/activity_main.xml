<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/batalla"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.labsoftware01.pookemon.MainActivity">

    <TextView
        android:id="@+id/my_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/img1"
        android:layout_below="@+id/Fight"
        android:layout_marginTop="89dp"
        android:text="100" />

    <TextView
        android:id="@+id/machine_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/my_life"
        android:layout_alignBottom="@+id/my_life"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/Fight"
        android:text="100" />

    <Button
        android:id="@+id/Fight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/img1"
        android:layout_marginEnd="11dp"
        android:onClick="Fight"
        android:text="Fight" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="13dp" />

    <uk.co.barbuzz.beerprogressview.BeerProgressView
        android:id="@+id/beerProgressView1"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:beerColor="@android:color/holo_red_dark"
        app:bubbleColor="#B67200"
        app:beerProgress="100"
        app:waveMax="100"
        app:waveAmplitude="3dp"/>
    <uk.co.barbuzz.beerprogressview.BeerProgressView
        android:id="@+id/beerProgressView2"
        android:layout_width="50dp"
        android:layout_height="100dp"
        app:beerColor="@android:color/holo_red_dark"
        app:bubbleColor="#B67200"
        app:beerProgress="100"
        app:waveMax="100"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/img1"
        app:waveAmplitude="3dp"/>
</RelativeLayout>
